<html lang="en" class="body-full-height">
<head>
    <title>Admin Login - Web CMS</title>
    <link rel="icon" href="@Web_CMS.HelperClass.Helper.ToAbsoluteUrl("Areas/favicon.ico")" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" id="theme" href="@Web_CMS.HelperClass.Helper.ToAbsoluteUrl("Content/css/theme-default.css")" />
    <link rel="stylesheet" type="text/css" id="theme" href="@Web_CMS.HelperClass.Helper.ToAbsoluteUrl("Content/css/bootstrap/bootstrap.min.css")" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
</head>
<body>
    <div class="login-container lightmode">
        <div class="login-box animated fadeInDown">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success" role="alert">
                    <button class="close" data-dismiss="alert" type="button">
                        <span aria-hidden="true">×</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <strong>Oh snap!</strong>
                    @ViewBag.SuccessMessage
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <button class="close" data-dismiss="alert" type="button">
                        <span aria-hidden="true">×</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <strong>Opps! </strong>
                    @ViewBag.ErrorMessage
                </div>
            }
            <!--<div class="login-logo"></div>-->
            <div class="login-body">
                <div class="login-title"><strong>Log In</strong> to your account</div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("LogIn", "Login", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" class="form-control" required="" placeholder="E-mail" name="UserName"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="password" class="form-control" required="" placeholder="Password" name="Password"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <button class="btn btn-info btn-block">Log In</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="login-footer">
                <div class="pull-left">
                    &copy; 2018 FK
                </div>
                <div class="pull-right">
                    <a href="#">About</a> |
                    <a href="#">Privacy</a> |
                    <a href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $('.close').on('click', function (c) { $(this).parent().fadeOut("slow"); });
    </script>
</body>
</html>